<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampName" placeholder="Campground Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampImage" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCampDescription" placeholder="Desciption">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back to campgrounds</a>
        </div>
    </div>
</div>

